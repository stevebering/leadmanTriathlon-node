extends layout

block content
  .starter-template
      h1= title
      p Welcome to #{title}

      div.fade(flash-alert='error', active-class='in alert')
        strong.alert-heading Uh oh! &nbsp;
        span.alert-message {{ flash.message }}

      div.fade(flash-alert='warn', active-class='in alert')
        strong.alert-heading Uh oh! &nbsp;
        span.alert-message {{ flash.message }}

      div.fade(flash-alert='info', active-class='in alert')
          strong.alert-heading Note: &nbsp;
          span.alert-message {{ flash.message }}

      div.fade(flash-alert='success', active-class='in alert')
          strong.alert-heading Congrats! &nbsp;
          span.alert-message {{ flash.message }}

      div.row(data-ng-view='')

block scripts
    script(src='js/app.js')
    script(src='js/services.js')
    script(src='js/controllers.js')
    script(src='js/filters.js')
    script(src='js/directives.js')
    script(src='js/menu.js')