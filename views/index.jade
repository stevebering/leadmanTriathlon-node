extends layout

block content
  .starter-template
      h1= title
      p Welcome to #{title}

      .alert(ng-show="$root.message",
            ng-class="{ 'alert-danger': $root.message.type == 'error', 'alert-success': $root.message.type == 'success', 'alert-info': $root.message.type == 'info' }")
          {{ $root.message.value }}

      div.row(data-ng-view='')

block scripts
    script(src='js/app.js')
    script(src='js/services.js')
    script(src='js/controllers.js')
    script(src='js/filters.js')
    script(src='js/directives.js')
    script(src='js/menu.js')