.container
    .row
        .col-md-4
            .form-group
                label(for='name') Name
                input.form-control(type='text', id='name', placeholder='Session Name', data-ng-model='session.name')
            .form-group
                label(for='startDate') Starts
                input.form-control(type='text', id='startDate', placeholder='Start Date', data-ng-model='session.startDate')
            button.btn.btn-default(type='submit', data-ng-click='addSession()') Add Session