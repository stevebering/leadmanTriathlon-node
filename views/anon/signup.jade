.container
    .row
        .col-md-4
            form.css-form(novalidate='', name='form')

                .form-group(ng-class="{'has-error': form.firstName.$invalid, 'has-success': !form.firstName.$invalid}")

                    label.control-label(for='firstName') First Name

                    .input-group
                        input.form-control(type='text', id='firstName', name='firstName',
                            placeholder='First Name', data-ng-model='user.firstName', required='',
                            ng-minlength='3', ng-maxlength='50')
                        span.input-group-addon
                            i.fa.fa-star

                    .help-block.error(data-ng-show='form.firstName.$dirty && form.firstName.$invalid')
                        span(data-ng-show='form.firstName.$error.minlength')  Please provide a first name (3-50 characters)
                        span(data-ng-show='form.firstName.$error.maxlength')  Please provide a first name (3-50 characters)

                .form-group(ng-class="{'has-error': form.lastName.$invalid, 'has-success': !form.lastName.$invalid}")

                    label.control-label(for='lastName') Last Name

                    .input-group
                        input.form-control(type='text', id='lastName', name='lastName',
                            placeholder='Last Name', data-ng-model='user.lastName', required='',
                            ng-minlength='3', ng-maxlength='50')
                        span.input-group-addon
                            i.fa.fa-star

                    .help-block.error(data-ng-show='form.lastName.$dirty && form.lastName.$invalid')
                        span(data-ng-show='form.lastName.$error.minlength')  Please provide a last name (3-50 characters)
                        span(data-ng-show='form.lastName.$error.maxlength')  Please provide a last name (3-50 characters)

                .form-group(ng-class="{'has-error': form.emailAddress.$invalid, 'has-success': !form.emailAddress.$invalid}")

                    label.control-label(for='emailAddress') Email Address

                    .input-group
                        input.form-control(type='email', id='emailAddress', name='emailAddress',
                        placeholder='Email Address', data-ng-model='user.emailAddress', required='')
                        span.input-group-addon
                            i.fa.fa-star

                    .help-block.error(data-ng-show='form.emailAddress.$dirty && form.emailAddress.$invalid')
                        span(data-ng-show='form.emailAddress.$error.email') Please provide a valid email address

                .form-group(ng-class="{'has-error': form.password.$invalid, 'has-success': !form.password.$invalid}")

                    label.control-label(for='password') Password

                    .input-group
                        input.form-control(type='password', id='password', name='password',
                        placeholder='Password', data-ng-model='user.password', required='')
                        span.input-group-addon
                            i.fa.fa-star

                    .help-block.error(data-ng-show='form.password.$dirty && form.password.$invalid')
                        span(data-ng-show='form.password.$error.email') Please provide a valid email address

                .form-group(ng-class="{'has-error': form.confirm.$invalid, 'has-success': !form.confirm.$invalid}")

                    label.control-label(for='confirm') Confirm Password

                    .input-group
                        input.form-control(type='password', id='confirm', name='confirm',
                        placeholder='Confirm Password', data-ng-model='user.confirm', required='',
                        data-password-verify='user.password')
                        span.input-group-addon
                            i.fa.fa-star

                    .help-block.error(data-ng-show='form.confirm.$dirty && form.confirm.$invalid')
                        span(data-ng-show='form.confirm.$error.passwordVerify') Passwords do not match

                .form-group(ng-class="{'has-error': form.mapmyfitnessid.$invalid, 'has-success': !form.mapmyfitnessid.$invalid}")

                    label.control-label(for='mapmyfitnessid') MapMyFitness ID

                    .input-group
                        input.form-control(type='number', id='mapmyfitnessid', name='mapmyfitnessid',
                        placeholder='MapMyFitness ID', data-ng-model='user.mapmyfitnessid', required='')
                        span.input-group-addon
                            i.fa.fa-star

                    .help-block.error(data-ng-show='form.mapmyfitnessid.$dirty && form.mapmyfitnessid.$invalid')
                        span Please provide your MapMyFitness ID number



    button.btn.btn-default(type='submit', data-ng-click='registerUser()',
                    data-ng-disabled='form.$invalid') Register